extends ./layout/base

block variables
    - var bodyClass = 'page--post'
    - var pageTitle = file.getMetaTag('title') + ' - blog.pomek.pl'

block head
    link(href='//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.6.0/styles/github.min.css', rel='stylesheet')

block scripts
    script(src='//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.6.0/highlight.min.js')
    script(src=utils.path(rootPath, config.ASSETS.SCRIPTS, 'post.js'))

block body
    - var imageUrl = file.getMetaTag('image')

    article.post(class=(!!imageUrl ? 'post--has-image' : ''))
        if imageUrl
            div.post__image(style='background-image:url("' + file.getMetaTag('image') + '")', aria-hidden='true')

        div.post__demo
            +article(file, true)
